<?xml version='1.0' encoding='UTF-8'?>

<properties>

  <property>
    <key>pidfile</key>
    <value>/var/tmp/bischeck.pid</value>
  </property>

  <!-- Clear the threshold cache every day 10 sec after midnight -->
  <property>
    <key>thresholdCacheClear</key>
    <value>10 0 00 * * ? *</value>
  </property>

  <property>
    <key>JDBCSerivce.querytimeout</key>
    <value>5</value>
  </property>

  
<!-- Already the default values to have week numbering according to ISO 8601 -->  
  <property>
    <key>mindaysinfirstweek</key>
    <value>4</value>
  </property>
  
  <property>
    <key>firstdayofweek</key>
    <value>2</value>
  </property>

</properties>
